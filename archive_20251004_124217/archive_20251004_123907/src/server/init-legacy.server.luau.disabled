    rightTread.Anchored = false
    rightTread.CanCollide = false
    rightTread.Parent = robotFolder
    rightTread.Position = robotBody.Position + Vector3.new(robotBody.Size.X/2 + 0.15, -robotBody.Size.Y/4, 0)

    -- Weld all parts together
